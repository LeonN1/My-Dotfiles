#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# file manager
super + e
    ~/.scripts/launch-apps.sh file_manager

super + Shift + r
    ~/.scripts/reload-ui.sh

# web browser
super + b
    ~/.scripts/launch-apps.sh web_browser

# program launcher
super + m
    ~/.config/rofi/scripts/rofi-launcher.sh

# Brightness control
XF86MonBrightnessUp
    ~/.scripts/change-brightness.sh +

XF86MonBrightnessDown
    ~/.scripts/change-brightness.sh -

# Audio-volume control
XF86AudioRaiseVolume
    ~/.scripts/change-volume.sh +

XF86AudioLowerVolume
    ~/.scripts/change-volume.sh -

XF86AudioMute
    ~/.scripts/change-volume.sh 0

# Screenshot
Print
    ~/.scripts/screenshot-screen.sh

shift + Print
    ~/.scripts/screenshot-selection.sh

# Power menu
super + F4
    ~/.config/rofi/scripts/rofi-power.sh

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + r
	~/.scripts/reload-ui.sh

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

#
# focus/swap
#

# focus the next/previous window in the current desktop
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local.!hidden.window

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

